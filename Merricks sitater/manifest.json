{
  "name": "Merricks sitater",
  "description": "Utvidelsen endrer siden for ny fane til en egendefinert versjon. Trykk på ikonet for å legge til nye sider i navigasjonsmenyen.",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "favicon16.png",
    "48": "favicon48.png",
    "128": "favicon128.png"
  },
  "chrome_url_overrides" : {
    "newtab": "merricks_sitater.html"
  },
  "content_scripts": [
    {
      "matches": ["file://*"],
      "css": ["style.css"],
      "js": ["jquery.js", "merricks-sitater.js", "innstillinger.js"]
    }
  ],
  "permissions": [
    "storage",
    "https://fonts.googleapis.com/css?family=Roboto",
    "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
  ],
  "options_ui": {
    "page": "innstillinger.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": {
      "16": "favicon16.png",
      "48": "favicon48.png",
      "128": "favicon128.png"
    },
    "default_title": "Merricks sitater",
    "default_popup": "innstillinger.html"
  }
}